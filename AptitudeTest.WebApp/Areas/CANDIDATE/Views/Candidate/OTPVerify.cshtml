@model AptitudeTest.WebApp.Models.User

@{
    ViewData["Title"] = "OTPVerify";
}

<h1 style="text-align:center; margin-top: 10px">Verify to Change Password</h1>


<div class="container">
    <div class="login-box" style="margin: 100px 200px">
        <div class="card">
            <div class="card-body login-card-body">
                <form asp-action="OTPVerify">
                    <input type="text" name="verifyOtp" class="form-control" />
                    <span class="text-danger">@Html.ValidationMessage("OtpNullError")</span>
                    <span class="text-danger">@Html.ValidationMessage("OtpWrongError")</span>

                    <input style="border-radius: 30px; margin-left: 40%" type="submit" value="Submit" class="btn btn-primary" />
                </form>
                <div>
                    <a asp-action="Profile">Back to Profile</a>
                </div>
            </div>
        </div>

       
        </div>
        </div>

