@model DashboardViewModel
@{
    Layout = "_Layout";
}

﻿@{
    ViewBag.Title = "Home Page";
}
 
<div class="row mb-3">
    <div class="col-xl-3 col-sm-6 py-2">
        <div class="card bg-success text-white h-100">
            <div class="card-body bg-success">
                <div class="rotate">
                    <i class="fa fa-user fa-4x"></i>
                </div>
                <br />
                <h6 class="text-uppercase">Candidates</h6>
                <h1 class="display-4">@Model.CandidateCount</h1>
                <a asp-controller="Manager" asp-action="AllCandidate" class="small-box-footer text-white">view  <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6 py-2">
        <div class="card text-white bg-danger h-100">
            <div class="card-body bg-danger">
                <div class="rotate">
                    <i class="fa fa-list fa-4x"></i>
                </div>
                <br />
                <h6 class="text-uppercase">Exams</h6>
                <h1 class="display-4">@Model.ExamCount</h1>
                <a asp-controller="Manager" asp-action="AllExam" class="small-box-footer text-white">view  <i class="fa fa-arrow-circle-right"></i></a>

            </div>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6 py-2">
        <div class="card text-white bg-info h-100">
            <div class="card-body bg-info">
                <div class="rotate">
                    <i class="fa fa-question-circle fa-4x"></i>
                </div>
                <br />
                <h6 class="text-uppercase">Question and Answer</h6>
                <h1 class="display-4">@Model.QuestionCount</h1>
                <a asp-controller="Manager" asp-action="AllQnAByExam" class="small-box-footer text-white">view  <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6 py-2">
        <div class="card text-white bg-warning h-100">
            <div class="card-body">
                <div class="rotate">
                    <i class="fa fa-share fa-4x"></i>
                </div>
                <h6 class="text-uppercase">Passing Candidate</h6>
                <h1 class="display-4">@Model.PassingCount</h1>
                <a asp-controller="Manager" asp-action="PassingResult" class="small-box-footer text-white">view  <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
    </div>
</div>
<div class="jumbotron">
    <div id="container"></div>
</div>